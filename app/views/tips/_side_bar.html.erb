<label class="new-tip" id="new-tip">
  <i class="fas fa-pen logo-btn"> </i><%= link_to "新規投稿", new_tip_path, id:"new-tip-btn" %>
</label>
<label class="new-trend" id="new-trend">
  <i class="fas fa-chart-line logo-btn"></i><%= link_to "トレンド", trend_tips_path, id:"trend-btn" %>
</label>
<% if user_signed_in? %>
  <label class="my-page" id="my-page">
    <i class="fas fa-user logo-btn"></i><%= link_to "マイページ", "/users/#{current_user.id}", id:"my-page-btn" %>
  </label>
<% end %>
<label class="search" id="search">
  <i class="fas fa-search logo-btn"></i><a id="search-btn" class="search-btn">詳細検索</a>
</label>
<div class="detail-search-area" id="detail-search-area" style="display:none;" >
  <%= search_form_for @t, url: detail_search_tips_path do |f| %>
    <div class="search-title-area">
      <p>タイトル：</p>
        <label>
          <%= f.text_field :title_cont, placeholder:"タイトルを入力", class:"search-title" %>
        </label>
    </div>
    <div class="search-tag-area">
      <p>タグ：</p>
      <label>
        <%= f.text_field :tip_tag_relations_tag_name_cont, placeholder:"タグを入力", class:"search-title" %>
      </label>
    </div>
    <div class="search-category-area">
      <p>カテゴリー：</p>
      <label>
        <%= f.collection_select(:category_id_eq, @category, :id, :name, { include_blank: '--'}) %>
      </label>
    </div>
    <div class="search-distributer-area">
      <p>ユーザー：</p>
      <label>
        <%= f.text_field :user_nickname_cont, placeholder:"ユーザー名を入力", class: "search-distributer" %>
      </label>
    </div>
    <div class="search-description-area">
      <p>説明：</p>
      <label>
        <%= f.text_field :description_cont, placeholder:"キーワードを入力", class: "search-discription" %>
      </label>
    </div>
    <%= f.submit '検索', class: "search-submit", id: "search-submit" %>
  <% end %>
</div>